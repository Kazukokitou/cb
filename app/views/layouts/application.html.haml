%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}
      %meta{:content => "小さな手作りパン工房、Coupé Baguette(クープ バゲット)のWebサイト。", :name => "description"}
        %meta{:content => "西脇市,パン,パン屋,Coupé Baguette,Coupe Baguette,クープ バゲット", :name => "keywords"}
          %link{:href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/
          %title Coupé Baguette クープ バゲット
          = stylesheet_link_tag "application"
          = javascript_include_tag :defaults
          = csrf_meta_tag
          %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}
            = google_analytics(ENV["GOOGLE_ANALYTICS_CODE"])
  %body
    #header
      #subtitle.title 小さな手作りパン工房
      #sitename
        %h1= link_to 'Coupé Baguette', '/'
        #ruby.title -クープ バゲット-
      %ul
        %li= link_to 'Concept', action: 'concept', controller: 'pages'
        %li= link_to 'Menu', action: 'menu', controller: 'pages'
        %li= link_to 'Shop Info', action: 'shop_info', controller: 'pages'
        %li= link_to 'Contact', action: 'new', controller: 'inquiries'
        %li
          %a{:href => "http://lapin418.exblog.jp/"} Blog
    #content
      = content_for?(:content) ? yield(:content) : yield
    #footer
      #copyright
        %address.note Copyright (C) Coupé Baguette All rights reserved.
